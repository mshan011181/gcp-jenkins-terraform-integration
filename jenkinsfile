pipeline{
    agent any
    environment {
        CLOUDSDK_CORE_PROJECT='devops-project1-418302'         
        GOOGLE_CREDENTIALS = credentials('73053188-1b58-4dce-8257-81156beea13f')
        GOOGLE_CREDENTIALS_FILE_PATH = "${env.WORKSPACE}/google_credentials.json"        
         }
 stages{
         stage('Prepare Credentials') {
            steps {
                script {
                    writeFile file: "${env.GOOGLE_CREDENTIALS_FILE_PATH}", text: "${GOOGLE_CREDENTIALS}"
                  }
              }
            }
        stage('Git checkout'){
            steps{
                git credentialsId: '4974a9ad-a133-47c9-b173-fc09cbabf178', url: 'https://github.com/mshan011181/gcp-jenkins-terraform-integration.git'
            }
        }
    
  stage('Initialize'){
            steps{
                
                sh 'terraform init'
            
            }
        }
        stage('Plan'){
            steps{               
                sh 'terraform plan'            
             }
         }
        stage('Terraform Apply') {
            steps {
                script {
                     withEnv(['GOOGLE_APPLICATION_CREDENTIALS=${env.GOOGLE_CREDENTIALS_FILE_PATH}']) {
                        sh '''                        
                            terraform init
                            terraform apply -auto-approve
                        '''
                       }
                   }
                 }
              }   
  }
}

