pipeline{
    agent any
    environment {
        CLOUDSDK_CORE_PROJECT='devops-project1-418302' 
        
  }
    stages{

        stage('Git checkout'){
            steps{
                <GIT CREDENTIALS>
            }
        }
        stage('Initialize'){
            steps{
                
                sh 'terraform init'
            
            }
        }
        stage('Plan'){
            steps{               
                sh 'terraform plan'
               }
        }
        stage('apply'){
            steps{               
                sh 'terraform apply -auto-approve'
              }
        }
    }
}
