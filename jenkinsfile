pipeline{
    agent any
    environment {
        CLOUDSDK_CORE_PROJECT='devops-project1-418302' 
        
  }
    stages{

        stage('Git checkout'){
            steps{
                git credentialsId: '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', url: 'https://github.com/mshan011181/gcp-jenkins-terraform-integration.git'
            }
        }
        stage('Initialize'){
            steps{
                
                sh 'terraform init'
            
            }
        }
        stage('Plan'){
            steps{
                
                sh 'terraform plan'
            
            }
        }
        stage('apply'){
            steps{
                
                sh 'terraform apply -auto-approve'
            
            }
        }
    }
}
