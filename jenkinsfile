pipeline{
    agent any
    environment {
        CLOUDSDK_CORE_PROJECT='devops-project1-418302' 
        GOOGLE_CREDENTIALS = '73053188-1b58-4dce-8257-81156beea13f'
         }
 stages{
        stage('Git checkout'){
            steps{
                git credentialsId: '4974a9ad-a133-47c9-b173-fc09cbabf178', url: 'https://github.com/mshan011181/gcp-jenkins-terraform-integration.git'
            }
        }
    
  stage('Initialize'){
            steps{
                
                sh 'terraform init'
            
            }
        }
        stage('Plan'){
            steps{
                
                sh 'terraform plan'
            
            }
        }
      stage('Terraform Apply') {
            steps {
                script {
                    withCredentials([string(credentialsId: '73053188-1b58-4dce-8257-81156beea13f', variable: 'GOOGLE_CREDENTIALS')]) {
                        sh '''
                            terraform init
                            terraform apply -auto-approve
                        '''
                       }
                    }
                 }
              }
    }
}
