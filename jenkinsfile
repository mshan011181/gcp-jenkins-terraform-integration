pipeline{
    agent any
    environment {
        CLOUDSDK_CORE_PROJECT='devops-project1-418302' 
        GCLOUD_JSON_KEY = credentials(e52a5cb1507cdece476cf43e890666976417b232)
         }
 stages{
        stage('Git checkout'){
            steps{
                git credentialsId: '4974a9ad-a133-47c9-b173-fc09cbabf178', url: 'https://github.com/mshan011181/gcp-jenkins-terraform-integration.git'
            }
        }
     stage('Authenticate with GCP') {
            steps {
                // Echo the JSON key file content to a temporary file and authenticate with GCP
                sh '''
                    echo '$GCLOUD_JSON_KEY' > /tmp/gcp_key.json
                    gcloud auth activate-service-account --key-file=/tmp/gcp_key.json
                '''
            }
        } 
  stage('Initialize'){
            steps{
                
                sh 'terraform init'
            
            }
        }
        stage('Plan'){
            steps{
                
                sh 'terraform plan'
            
            }
        }
        stage('apply'){
            steps{
                
                sh 'terraform apply -auto-approve'
            
            }
        }
    }
}
