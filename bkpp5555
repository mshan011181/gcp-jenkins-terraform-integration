pipeline{
    agent any
    environment {
        CLOUDSDK_CORE_PROJECT='<PROJECT_ID>' 
        
  }
    stages{

        stage('Git checkout'){
            steps{
                <GIT CREDENTIALS>
            }
        }
        stage('Initialize'){
            steps{
                
                sh 'terraform init'
            
            }
        }
        stage('Plan'){
            steps{
                
                sh 'terraform plan'
            
            }
        }
        stage('apply'){
            steps{
                
                sh 'terraform apply -auto-approve'
            
            }
        }
    }
}
